<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainRedBox"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f00"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/bigGreenBox"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:background="#0f0"
        android:layout_weight="1">
        <EditText
            android:id="@+id/editText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
        <Button
            android:id="@+id/clearButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/clear" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/bigBlueBox"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:background="#00f"
        android:layout_weight="6"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="30dp">
        <LinearLayout
            android:id="@+id/orangeBox1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#fb0"
            android:orientation="vertical"
            android:layout_weight="1">
            <Button
                android:id="@+id/sinButton"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="@string/sin"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/cosButton"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="@string/cos"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/tanButton"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="@string/tan"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/piButton"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="@string/pi"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/factorialButton"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="@string/factorial"
                android:layout_weight="1"/>
            </LinearLayout>
        <LinearLayout
            android:id="@+id/orangeBox2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#ffffd000"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_marginRight="30dp">
            <Button
                android:id="@+id/lnButton"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="@string/ln"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/logButton"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="@string/log"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/eButton"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="@string/e"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/powButton"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="@string/power"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/sqrtButton"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="@string/sqrt"
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/blackBox"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#000"
            android:orientation="vertical"
            android:layout_weight="4">
            <LinearLayout
                android:id="@+id/greenBox1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="#0b0"
                android:orientation="horizontal"
                android:layout_weight="1">
                <Button
                    android:id="@+id/sevenButton"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="@string/seven"
                    android:layout_weight="1"/>
                <Button
                    android:id="@+id/eightButton"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="@string/eight"
                    android:layout_weight="1"/>
                <Button
                    android:id="@+id/nineButton"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="@string/nine"
                    android:layout_weight="1"/>
                <Button
                    android:id="@+id/divButton"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="@string/div"
                    android:layout_weight="1"/>
                <Button
                    android:id="@+id/openParButton"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="@string/open_par"
                    android:layout_weight="1"/>
             </LinearLayout>
            <LinearLayout
                android:id="@+id/greenBox2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="#0a0"
                android:orientation="horizontal"
                android:layout_weight="1">
                <Button
                    android:id="@+id/fourButton"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="@string/four"
                    android:layout_weight="1"/>
                <Button
                    android:id="@+id/fiveButton"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="@string/five"
                    android:layout_weight="1"/>
                <Button
                    android:id="@+id/sixButton"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="@string/six"
                    android:layout_weight="1"/>
                <Button
                    android:id="@+id/multButton"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="@string/mult"
                    android:layout_weight="1"/>
                <Button
                    android:id="@+id/closeParButton"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="@string/close_par"
                    android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/blueBox"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="#00a"
                android:orientation="horizontal"
                android:layout_weight="2">
                <LinearLayout
                    android:id="@+id/redBox"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="#a00"
                    android:orientation="vertical"
                    android:layout_weight="4">
                    <LinearLayout
                        android:id="@+id/greenBox3"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:background="#0d0"
                        android:orientation="horizontal"
                        android:layout_weight="1">
                        <Button
                            android:id="@+id/oneButton"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:text="@string/one"
                            android:layout_weight="1"/>
                        <Button
                            android:id="@+id/twoButton"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:text="@string/two"
                            android:layout_weight="1"/>
                        <Button
                            android:id="@+id/threeButton"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:text="@string/three"
                            android:layout_weight="1"/>
                        <Button
                            android:id="@+id/minusButton"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:text="@string/minus"
                            android:layout_weight="1"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/greenBox4"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:background="#0c0"
                        android:orientation="horizontal"
                        android:layout_weight="1">
                        <Button
                            android:id="@+id/zeroButton"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:text="@string/zero"
                            android:layout_weight="2"/>
                        <Button
                            android:id="@+id/dotButton"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:text="@string/dot"
                            android:layout_weight="1"/>
                        <Button
                            android:id="@+id/plusButton"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:text="@string/plus"
                            android:layout_weight="1"/>
                    </LinearLayout>
                </LinearLayout>
                <Button
                    android:id="@+id/equalButton"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="@string/equals"
                    android:layout_weight="1"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
